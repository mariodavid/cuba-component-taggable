<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="customersTable"
        messagesPack="de.diedavids.cuba.taggable.web.example.customer">
    <data readOnly="true">
        <collection id="customersDc"
                    class="de.diedavids.cuba.taggable.entity.example.Customer"
                    view="_local">
            <loader id="customersDl">
                <query>
                    <![CDATA[select e from ddct_Customer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="customersTable"
            spacing="true">
        <filter id="filter"
                applyTo="customersTable"
                dataLoader="customersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="customersTable"
                    width="100%"
                    dataContainer="customersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="customersTable.create"/>
                <button id="editBtn" action="customersTable.edit"/>
                <button id="removeBtn" action="customersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
